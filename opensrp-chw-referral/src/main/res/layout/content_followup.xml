<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        style="@style/CustomFontTextViewStyle.ClientList.Bold"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/referral_details"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <View
                        android:id="@+id/strip_one"
                        android:layout_width="140dp"
                        android:layout_height="5dp"
                        android:layout_below="@id/heading"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/text_blue" />
                </RelativeLayout>


                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/referral_date_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/referral_date_label"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
                    android:textColor="@color/dark_grey_text"
                    android:id="@+id/referral_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="12/12/1999"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/phone_number_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_marginStart="32dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="Phone Number"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/phone_number_title"
                    android:drawableStart="@drawable/ic_call_black_24dp"
                    android:drawablePadding="8dp"
                    android:text="0714417593"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/helper_name_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/primary_care_giver"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
                    android:textColor="@color/dark_grey_text"
                    android:id="@+id/helper_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:text="Kinjekitile Ngwale"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/helper_phone_number_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="Primary care giver contacts"
                    android:textSize="14sp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
                    android:id="@+id/helper_phone_number_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/text_blue"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_call_black_24dp"
                    android:text="0714417593"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/me_page_line_separator" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/referer_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/referral_information"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/strip_two"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/text_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/sababu_ya_rufaa_title"
                        style="@style/CustomFontTextViewStyle.ClientList.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/referral_reason"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sababu_ya_rufaa_title">

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/followUp_reason"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/clinical_information_title"
                        style="@style/CustomFontTextViewStyle.ClientList.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/other_info"
                        android:textSize="14sp" />

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:textColor="@color/dark_grey_text"
                        android:id="@+id/other_clinical_inforamtion_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clinical_information_title"
                        android:layout_marginTop="8dp"
                        android:text="N/A"
                        android:textSize="14sp" />


                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/referer_name_title"
                        style="@style/CustomFontTextViewStyle.ClientList.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:layout_marginTop="8dp"
                        android:paddingEnd="0dp"
                        android:text="Referral Issued by"
                        android:textSize="14sp" />

                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/referer_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/referer_name_title"
                        android:layout_marginTop="4dp"
                        android:text=" - "
                        android:textSize="14sp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/me_page_line_separator" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/feedback_title"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/referral_feedback"
                    android:textSize="16sp" />


                <View
                    android:id="@+id/strip_three"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/text_blue" />


                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:id="@+id/service_offered_title"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_missing_reasons"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:textSize="14sp" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerClientAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_arrowColor="@color/text_blue"
                    app:ms_arrowSize="14dp"
                    app:ms_baseColor="@color/text_blue"
                    app:ms_enableFloatingLabel="false"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:ms_hint="@string/hint_missing_reasons"
                    app:ms_multiline="true"
                    app:ms_thickness="1dp"
                    app:paddingStart="0dp" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/service_advice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    style="@style/CustomFontTextViewStyle.ClientList.Bold"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="@string/client_condition"
                    android:textSize="14sp" />

                <EditText
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:id="@+id/client_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:minLines="4"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    android:inputType="text" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="32dp"
                        android:text="@string/save"
                        android:textColor="@color/text_blue" />


                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</ScrollView>